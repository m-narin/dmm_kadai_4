<table class="table table-hover table-inverse">
  <tbody>
    <% book_comments.each do |book_comment| %>
      <tr>
        <td>
          <%= link_to user_path(book_comment.user.id) do %>
            <%= image_tag book_comment.user.get_profile_image(100,100) %><br>
            <%= link_to book_comment.user.name, user_path(book_comment.user.id) %>
          <% end %>
        </td>
        <td><%= book_comment.comment %></td>
        <% if book_comment.user == current_user %>
        <td><%= link_to "Destroy", book_book_comment_path(book_id: book_comment.book_id, id: book_comment.id), method: :delete, class:"btn btn-sm btn-danger", "data-confirm" => "本当に消しますか?" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>