<div class="container px-5 px-sm-0">
  <%= render "shared/error_messages", obj:@new_book %>
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= render "shared/user_info", user:current_user %>
      <h2 class="mt-3">New book</h2>
      <%= render "shared/form", book:@new_book, button_text:"Create Book" %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <%= render "shared/book_list", books:@books %>
    </div>
  </div>
</div>